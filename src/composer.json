{
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "Tests/"
        }
    },
    "scripts": {
        "test": "phpunit --bootstrap vendor/autoload.php tests",
        "coverage": "phpunit --bootstrap vendor/autoload.php --coverage-text tests",
        "lint": "phpcs --standard=PSR2 src/",
        "fix": "phpcbf --standard=PSR2 src/"
    }
}